<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/about_picture"
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:layout_gravity="center"
            android:src="@drawable/deni_pramulia"
            android:layout_marginTop="50dp"/>

        <TextView
            android:id="@+id/about_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/name_creator"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/about_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="@string/email_creator"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/about_reference"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="12sp"
            android:layout_marginTop="20dp"
            android:text="@string/reference_url"
            android:textAlignment="center"
            />

</LinearLayout>